<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_scenic_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        >

    <ImageView
        android:id="@+id/scenic_detail_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/scenic_detail_biref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scenic_detail_img"
        />

    <RelativeLayout
        android:id="@+id/spaeak"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/scenic_detail_biref"
        android:gravity="bottom">

        <TextView
            android:id="@+id/speak_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speak"
            android:textSize="18sp"
            android:textColor="#000000"
            />

        <Switch
            android:id="@+id/sw_speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/speak_text"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spaeak"
        android:text="@string/navigation"
        />

</RelativeLayout>
